generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Payment {
  id        Int           @id @default(autoincrement())
  token     String        @unique
  orderCode Int           @unique @map("order_code")
  amount    Int
  status    PaymentStatus

  @@map("payments")
}

enum PaymentStatus {
  PENDING
  PAID
  FAILED
  CANCELED
}
